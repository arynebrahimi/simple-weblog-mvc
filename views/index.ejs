<!DOCTYPE html>
<html>
<head>
  <title>Blog MVC</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <nav class="navbar navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="/">Simple Weblog</a>
  </div>
</nav>

<div class="container mt-4">

  <div class="card p-3 shadow-sm">
    <h5>üìù New Post</h5>

    <form action="/posts" method="POST">
      <div class="mb-2">
        <input class="form-control" type="text" name="title" placeholder="Post title..." required>
      </div>

      <div class="mb-2">
        <textarea class="form-control" name="content" placeholder="Write something..." required></textarea>
      </div>

      <button class="btn btn-primary">Create Post</button>
    </form>
  </div>

  <hr class="my-4">

  <div class="d-flex justify-content-between align-items-center">
    <h4>Blog Posts</h4>
    <span class="badge bg-dark">Total: <%= totalPosts %></span>
  </div>
  

  <% if (posts.length === 0) { %>
    <p class="text-muted">No posts yet!</p>
  <% } %>

  <% posts.forEach(post => { %>
    <div class="card p-3 mb-3 shadow-sm">
      <h5><%= post.title %></h5>
      <p class="post-content"><%= post.content %></p>
      <small class="text-muted">Created: <%= post.createdAt %></small>

      <div class="mt-2">
        <a class="btn btn-warning btn-sm" href="/posts/<%= post.id %>/edit">Edit</a>

        <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="display:inline;"
          onsubmit="return confirm('Are you sure you want to delete this post?');">
      <button class="btn btn-danger btn-sm">Delete</button>
    </form>
    
      </div>
    </div>
  <% }) %>

</div>

</body>
</html>
